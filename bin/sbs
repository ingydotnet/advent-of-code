#!/usr/bin/env ys-0

defn main(file): !:say
  code =: file:slurp
  ylines =: code:lines
  ywidth =: ylines.map(count).max(*)
  cwidth =: ENV.SBS_WIDTH || 100
  clj =: code:ys/compile
  clj =: sh({:in clj}
            'zprint'
            "{:width $cwidth :style :community}"
          ).out
           .replace(
             /(?m)^(\ *\(defn \S*)\n\s*\[/
             '$1 ['
           )
  clj =: |-
    ;; $ ys -c $file

    $clj
  clines =: clj:lines
  height =: max(ylines.# clines.#)
  reduce _ '' range(height):
    fn(out i):
      out +:
        format "%-${ywidth}s | %s\n":
          (ylines.$i || '')
          (clines.$i || '')
